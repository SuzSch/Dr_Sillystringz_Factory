@{
    Layout = "_Layout";
}
@using Factory.Models;

<div class="text-center">
    <h1>Welcome to Dr. Sillystringz's Factory!</h1>

    <h1>Engineers:</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added.</h3>
} 
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}
<hr>

<h1>Machines:</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added.</h3>
} 
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
    }
  </ul>
}
  </div>



